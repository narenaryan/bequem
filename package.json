{
  "name": "deutsch-learner",
  "version": "1.0.0",
  "description": "A desktop application to learn and revise German",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "copyindex": "cp index.html build",
    "copywc": "cp -r node_modules/@webcomponents/webcomponentsjs/bundles build && cp node_modules/@webcomponents/webcomponentsjs/webcomponents-loader.js build",
    "build": "rm -rf build && mkdir build && npm run copyindex && npm run copywc && rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wingmingchan/german.git"
  },
  "author": "Naren Y",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wingmingchan/german/issues"
  },
  "homepage": "https://github.com/wingmingchan/german#readme",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-decorators": "^7.10.1",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "bulma": "^0.9.0",
    "electron": "^9.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-img": "^1.1.0",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-postcss": "^3.1.2",
    "serve": "^10.1.1"
  },
  "dependencies": {
    "@rollup/plugin-babel": "^5.0.3",
    "@rollup/plugin-node-resolve": "^8.0.1",
    "lit-element": "^2.3.1"
  }
}
